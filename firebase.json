{
  "hosting": [{
    "target": "schmudgin",
    "public": "schmudginUI/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }]
  }, {
    "target": "admin",
    "public": "adminUI/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }]
  }, {
    "target": "simple",
    "public": "simpleUI/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "/videoDirectory",
      "function": "serveVideoDirectory"
    }, {
      "source": "**",
      "destination": "/index.html"
    }]
  }],

  "functions": {
    "source": "cloudFunctions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
