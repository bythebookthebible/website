rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /users/{id} {
    	allow read: if request.auth != null && request.auth.uid == id;
    }
    match /memoryResources/{document=**} {
      allow read;
    }
    match /memoryResources_02/{document=**} {
      allow read;
    }
    match /summercamps/{document=**} {
    	allow read;
    }
    match /{document=**} {
    	allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }
  }
}