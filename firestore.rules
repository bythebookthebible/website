rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /memoryResources/{document=**} {
      allow read;
    }
    match /memoryModules/{document=**} {
      allow read;
    }
    match /memorySeries/{document=**} {
      allow read;
    }
    match /users/{id} {
      allow read, write: if request.auth != null && request.auth.uid == id;
    }
    // transitional
    match /userData/{id} {
      allow read, write: if request.auth != null && request.auth.uid == id;
    }
    match /memoryResources_02/{document=**} {
      allow read;
    }
    match /summercamps/{document=**} {
      allow read;
    }
    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }
  }
}